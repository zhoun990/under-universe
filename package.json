  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
