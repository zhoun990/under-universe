{
  "private": true,
  "scripts": {
    "start": "cd apps/mobile && npm run start",
    "tauri": "cd apps/game-editor && npm run tauri",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
